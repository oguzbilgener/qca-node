{
  "name": "qca-node",
  "version": "1.0.1",
  "description": "A REST API to create, retrieve, update and delete messages.",
  "main": "build/index.js",
  "author": "Oguz Bilgener (oguz@bilgener.me)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oguzbilgener/qca-node.git"
  },
  "scripts": {
    "build:server": "babel -s -d build --extensions '.js,.jsx,.ts,.tsx' src",
    "build:types": "tsc --emitDeclarationOnly",
    "build:docs": "",
    "build": "npm run build:types && npm run build:server",
    "build:image": "docker build -t qca-node:$npm_package_version .",
    "build:image:latest": "docker build -t qca-node .",
    "clean": "rm -rf dist build node_modules coverage",
    "devstart": "NODE_ENV=development node build/index.js",
    "start": "NODE_ENV=production node build/index.js",
    "scaffold": "ts-node bin/scaffold.ts",
    "cli": "node bin/qca-cli",
    "test": "jest --forceExit"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^8.0.0",
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "core-js": "^3.6.4",
    "dotenv": "^8.2.0",
    "ee-ts": "^1.0.1",
    "exegesis": "^2.5.3",
    "exegesis-express": "^2.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^3.10.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.19",
    "mongodb": "^3.5.5",
    "mongoose": "^5.9.4",
    "morgan": "^1.10.0",
    "promise-tools": "^2.1.0",
    "swagger-ui-dist": "^3.25.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@shelf/jest-mongodb": "^1.1.3",
    "@types/bson": "^4.0.1",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/js-yaml": "^3.12.2",
    "@types/json-schema": "^7.0.4",
    "@types/lodash": "^4.14.149",
    "@types/mongodb": "^3.5.2",
    "@types/mongoose": "^5.7.6",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.2",
    "@types/node": "^13.9.1",
    "@types/node-fetch": "^2.5.5",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-dist": "^3.0.5",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "node-fetch": "^2.6.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "typescript": "^3.8.3",
    "yargs": "^15.3.1"
  }
}
